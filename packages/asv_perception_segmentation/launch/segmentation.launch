<?xml version="1.0" encoding="utf-8"?>
<launch>
    <arg name="pkg_name" value="asv_perception_segmentation"/>
    <arg name="camera0_image_topic" /> 
    <arg name="camera1_image_topic" /> 
    <arg name="camera2_image_topic" /> 
    <arg name="left_ir_camera_image_topic" />
    <arg name="right_ir_camera_image_topic" />

    <!-- 
        Node to perform image segmentation, see segmentation_node.py -->
    
    <!--
    <node name="segmentation" pkg="$(arg pkg_name)" type="segmentation_node.py" required="true" output="screen">
        
        <remap from="~0/input" to="$(arg camera0_image_topic)" />
        <remap from="~1/input" to="$(arg camera1_image_topic)" />
        <remap from="~2/input" to="$(arg camera2_image_topic)" />

        <rosparam>
            n_inputs: 3
            model_path: "/data/segmentation/arm8imu3_noimu.ckpt-80000"
            per_process_gpu_memory_fraction: 0.0
            pixel_remap_value: 128
        </rosparam>
    </node>
    -->
    
    <node name="segmentation_ir" pkg="$(arg pkg_name)" type="segmentation_ir_node.py" required="true" output="screen">
        
        <remap from="~0/input_ir" to="$(arg left_ir_camera_image_topic)" />
        <remap from="~1/input_ir" to="$(arg right_ir_camera_image_topic)" />

        <rosparam>
            n_inputs_ir: 2
            ir_image_size: [256, 320]
            ir_image_mean: [130.94,130.94,130.94]
            ir_model_path: "/data/segmentation/IRWASRWeights/arm8imu3_noimu.ckpt-30900"
            ir_num_classes: 7
            per_process_gpu_memory_fraction: 0.0
            pixel_remap_value: 128
        </rosparam>
    </node>
    
    
    <!--
    <node name="segmentation" pkg="$(arg pkg_name)" type="segmentation_node_UNet.py" required="true" output="screen">
        
        <remap from="~0/input" to="$(arg left_ir_camera_image_topic)" />
        <remap from="~1/input" to="$(arg right_ir_camera_image_topic)" /> 

        <rosparam>
            n_inputs: 2
            model_path: "/data/segmentation/UNet_Maritime.h5"
            image_size: [320,256]
            pixel_remap_value: 128
        </rosparam>
    </node>
    -->
</launch>